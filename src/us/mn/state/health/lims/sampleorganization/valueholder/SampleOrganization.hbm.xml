<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="us.mn.state.health.lims.sampleorganization.valueholder.SampleOrganization" table="SAMPLE_ORGANIZATION" optimistic-lock="version" dynamic-update="true" >
        <id name="id" type="us.mn.state.health.lims.hibernate.resources.usertype.LIMSStringNumberUserType">
            <column name="ID" precision="10" scale="0" />
            <generator class="sequence">
            	<param name="sequence">sample_org_seq</param>
            </generator>
        </id>
        <version name="lastupdated" column="LASTUPDATED" type="timestamp" access="field"/>

        <many-to-one name="organization" class="us.mn.state.health.lims.organization.valueholder.Organization" fetch="select">
            <column name="ORG_ID" precision="10" scale="0" />
        </many-to-one>
        <many-to-one name="sample" class="us.mn.state.health.lims.sample.valueholder.Sample" fetch="select">
            <column name="SAMP_ID" precision="10" scale="0" />
        </many-to-one>
        <property name="sampleOrganizationType" type="java.lang.String">
            <column name="SAMP_ORG_TYPE" length="1" />
        </property>
    </class>
</hibernate-mapping>

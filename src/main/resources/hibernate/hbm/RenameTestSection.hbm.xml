<!-- 		ts.testSectionName -->
<!-- 	</query> -->
<!-- 	<query name="renametestsection.getPrevious"> -->
<!-- 		from TestSection ts order by ts.organization.organizationName desc, -->
<!-- 		ts.testSectionName desc -->
<!-- 	</query> -->
</hibernate-mapping>

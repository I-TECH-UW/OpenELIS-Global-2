<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
<changeSet id="1" author="paulsc">
  <comment>Adds a name key for localization</comment>
  <addColumn tableName="site_information">
    <column name="name_key" type="varchar" />
  </addColumn>
</changeSet>
<changeSet id="2" author="paulsc">
  <comment>Adds localization id column</comment>
  <addColumn tableName="type_of_sample">
    <column name="name_localization_id" type="numeric" />
  </addColumn>
</changeSet>
</databaseChangeLog>

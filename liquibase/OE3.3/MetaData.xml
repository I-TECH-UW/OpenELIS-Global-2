</changeSet>
<changeSet author="paulsc" id="7">
	<comment>Removes referred out from status_of_sample table</comment>
	<delete tableName="status_of_sample">
		<where>name = 'referred out' and status_type = 'ANALYSIS' </where>
	</delete>
</changeSet>
